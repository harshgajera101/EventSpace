<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<script>
  setTimeout(() => {
    document.querySelectorAll(".alert").forEach((alert) => {
      alert.classList.remove("show");
      alert.classList.add("fade");
      alert.style.opacity = "0";
      setTimeout(() => alert.remove(), 500);
    });
  }, 2000);
</script>
