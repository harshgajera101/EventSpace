<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3 mb-5">
    <div class="col-8 offset-2">
      <br />
      <h3>Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="venueName" class="form-label">Title</label>
          <input
            class="form-control"
            name="listing[venueName]"
            type="text"
            placeholder="Add a title"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
          <div class="invalid-feedback">Please enter a title</div>
        </div>

        <div class="mb-3">
          <label for="venueDescription" class="form-label">Description</label>
          <textarea
            class="form-control"
            name="listing[venueDescription]"
            type="text"
            placeholder="Enter description"
            required
          ></textarea>
          <div class="valid-feedback">Description Looks good!</div>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="eventRate" class="form-label">Price</label>
            <input
              class="form-control"
              name="listing[eventRate]"
              placeholder="1200"
              required
            />
            <div class="valid-feedback">Price Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <div class="mb-3 col-md-6">
            <label for="capacity" class="form-label">Capacity</label>
            <input
              class="form-control"
              name="listing[capacity]"
              placeholder="300"
              required
            />
            <div class="valid-feedback">Capacities Looks good!</div>
            <div class="invalid-feedback">Please enter a valid Capacities</div>
          </div>

