<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3 mb-5">
    <div class="col-8 offset-2">
      <br />
      <h3>Create a New Venue Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="venueName" class="form-label">Venue Name</label>
          <input
            class="form-control"
            name="listing[venueName]"
            type="text"
            placeholder="Add a venue name"
            required
          />
          <div class="valid-feedback">Venue Name Looks good!</div>
          <div class="invalid-feedback">Please enter a Venue Name</div>
        </div>

        <div class="mb-3">
          <label for="venueDescription" class="form-label"
            >Venue Description</label
          >
          <textarea
            class="form-control"
            name="listing[venueDescription]"
            type="text"
            placeholder="Enter description"
            required
          ></textarea>
          <div class="valid-feedback">Venue Description Looks good!</div>
          <div class="invalid-feedback">
            Please enter a short Venue Description
          </div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="eventRate" class="form-label">Price (per hour)</label>
            <input
              class="form-control"
              name="listing[eventRate]"
              placeholder="1200"
              required
            />
            <div class="valid-feedback">Price Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <div class="mb-3 col-md-6">
            <label for="capacity" class="form-label">Capacity</label>
            <input
              class="form-control"
              name="listing[capacity]"
              placeholder="300"
              required
            />
            <div class="valid-feedback">Capacities Looks good!</div>
            <div class="invalid-feedback">Please enter a valid Capacities</div>
          </div>
        </div>

        <div class="row">
          <div class="dropdown mb-3 col-md-6">
            <label for="venueType" class="form-label">Venue Type</label>
            <!-- <button
              class="btn btn-secondary dropdown-toggle"
              type="button"
              id="dropdownMenuButton"
              data-bs-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
              required
            >
              Dropdown button
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <p class="dropdown-item">Trending</p>
              <p class="dropdown-item">Beaches</p>
              <p class="dropdown-item">Mountains</p>
              <p class="dropdown-item">Swimmingpools</p>
              <p class="dropdown-item">IconicCity</p>
              <p class="dropdown-item">Rooms</p>
              <p class="dropdown-item">Frams</p>
              <p class="dropdown-item">Surfing</p>
              <p class="dropdown-item">Camping</p>
            </div>
          </div> -->
            <select
              class="form-select"
              id="venueType"
              name="listing[venueType]"
              required
            >
              <option value="" disabled selected>Select a venue type</option>
              <option value="Banquet Halls">Banquet Halls</option>
              <option value="Open Lawns / Gardens">Open Lawns / Gardens</option>
              <option value="Rooftop Venues">Rooftop Venues</option>
              <option value="Hotels & Resorts">Hotels & Resorts</option>
              <option value="Auditoriums">Auditoriums</option>
              <option value="Beachside Venues">Beachside Venues</option>
              <option value="Heritage Properties">Heritage Properties</option>
            </select>
          </div>

          <div class="mb-3 col-md-6">
            <label for="image" class="form-label">Upload Image</label>
            <input
              class="form-control"
              type="file"
              name="listing[image]"
              required
            />
          </div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              class="form-control"
              name="listing[location]"
              type="text"
              placeholder="Mumbai"
              required
            />
            <div class="valid-feedback">Location Looks good!</div>
            <div class="invalid-feedback">Please enter a valid location</div>
          </div>

          <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input
              class="form-control"
              name="listing[country]"
              type="text"
              placeholder="India"
              required
            />
            <div class="valid-feedback">Country Looks good!</div>
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
